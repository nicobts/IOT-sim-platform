# Application Settings
PROJECT_NAME="FastAPI IOT SIM Management Server"
VERSION="1.0.0"
API_V1_PREFIX="/api/v1"
DEBUG=false
ENVIRONMENT="development"

# Server Configuration
HOST="0.0.0.0"
PORT=8000
WORKERS=4
RELOAD=false

# Security
SECRET_KEY="your-secret-key-min-32-characters-change-this-in-production"
ALGORITHM="HS256"
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Database Configuration
DATABASE_URL="postgresql+asyncpg://user:password@localhost:5432/iot_sim_db"
DB_ECHO=false
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=0

# Redis Configuration
REDIS_URL="redis://localhost:6379/0"
REDIS_PASSWORD=""
REDIS_MAX_CONNECTIONS=50

# 1NCE API Configuration
ONCE_API_BASE_URL="https://api.1nce.com"
ONCE_CLIENT_ID="your-client-id"
ONCE_CLIENT_SECRET="your-client-secret"
ONCE_API_TIMEOUT=30
ONCE_MAX_RETRIES=3

# CORS Settings
BACKEND_CORS_ORIGINS='["http://localhost:3000","http://localhost:8000"]'

# Monitoring & Logging
LOG_LEVEL="INFO"
SENTRY_DSN=""
ENABLE_METRICS=true

# Background Jobs
ENABLE_SCHEDULER=true
SYNC_SIMS_INTERVAL_MINUTES=15
SYNC_USAGE_INTERVAL_MINUTES=60
CHECK_QUOTAS_INTERVAL_MINUTES=30

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=10

# Caching
CACHE_TTL_SECONDS=300
ENABLE_CACHE=true
