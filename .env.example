# ============================================================================
# IOT SIM Platform - Environment Configuration
# ============================================================================
# Copy this file to .env and update with your actual values
# Never commit .env to version control!

# ============================================================================
# DATABASE CONFIGURATION (PostgreSQL + TimescaleDB)
# ============================================================================
DATABASE_USER=user
DATABASE_PASSWORD=password
DATABASE_NAME=iot_sim_db
DB_ECHO=false
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=10

# ============================================================================
# REDIS CONFIGURATION
# ============================================================================
REDIS_PASSWORD=your-redis-password-change-in-production
REDIS_MAX_CONNECTIONS=50

# ============================================================================
# BACKEND API CONFIGURATION
# ============================================================================
# Application Settings
PROJECT_NAME="FastAPI IOT SIM Management Server"
VERSION="1.0.0"
API_V1_PREFIX="/api/v1"
ENVIRONMENT=development
DEBUG=true

# Server Configuration
HOST=0.0.0.0
PORT=8000
WORKERS=4
RELOAD=true

# Security
SECRET_KEY=your-secret-key-min-32-characters-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS Settings
BACKEND_CORS_ORIGINS=["http://localhost:3000","http://localhost:8000","http://localhost:8501"]

# Monitoring & Logging
LOG_LEVEL=INFO
SENTRY_DSN=
ENABLE_METRICS=true

# Background Jobs
ENABLE_SCHEDULER=true
SYNC_SIMS_INTERVAL_MINUTES=15
SYNC_USAGE_INTERVAL_MINUTES=60
CHECK_QUOTAS_INTERVAL_MINUTES=30

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=10

# Caching
CACHE_TTL_SECONDS=300
ENABLE_CACHE=true

# ============================================================================
# 1NCE API CONFIGURATION
# ============================================================================
ONCE_API_BASE_URL=https://api.1nce.com
ONCE_CLIENT_ID=your-client-id
ONCE_CLIENT_SECRET=your-client-secret
ONCE_API_TIMEOUT=30
ONCE_MAX_RETRIES=3

# ============================================================================
# GRAFANA CONFIGURATION
# ============================================================================
GRAFANA_USER=admin
GRAFANA_PASSWORD=admin
GRAFANA_ROOT_URL=http://localhost:3001

# ============================================================================
# FRONTEND CONFIGURATION (React/Next.js)
# ============================================================================
# Uncomment when Phase 3 is complete
# NEXT_PUBLIC_API_URL=http://localhost:8000
# NODE_ENV=development

# ============================================================================
# DOCKER CONFIGURATION
# ============================================================================
DOCKER_USERNAME=iot
VERSION=latest

# ============================================================================
# PRODUCTION SETTINGS
# ============================================================================
# Uncomment and set these in production

# SSL Certificate paths (for production)
# SSL_CERT_PATH=/path/to/cert.pem
# SSL_KEY_PATH=/path/to/key.pem

# External URLs
# PUBLIC_DOMAIN=iot.example.com
# NEXT_PUBLIC_API_URL=https://api.iot.example.com

# Monitoring (optional)
# PROMETHEUS_RETENTION_TIME=90d
# PROMETHEUS_RETENTION_SIZE=50GB

# ============================================================================
# DEVELOPMENT OVERRIDES
# ============================================================================
# These settings are optimized for development
# In production, set:
# - ENVIRONMENT=production
# - DEBUG=false
# - RELOAD=false
# - Strong SECRET_KEY (generate with: openssl rand -hex 32)
# - Strong passwords for DATABASE_PASSWORD and REDIS_PASSWORD
# - Proper CORS origins in BACKEND_CORS_ORIGINS
